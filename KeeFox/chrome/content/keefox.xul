  </toolbarpalette>
  
  <toolbox id="navigator-toolbox">
		<toolbar id="KeeFox-Toolbar" toolbarname="KeeFox" accesskey="K"
         class="chromeclass-toolbar" context="toolbar-context-menu" 
         hidden="false" persist="hidden" customizable="true" defaultset="KeeFox_Menu-Button,KeeFox_Main-Button,KeeFox_Main-Button-login-test">

    </toolbar>

	</toolbox>

  <popupset>
    <menupopup id="KeeFox-login-context" position="after_start">
      <menuitem label="Page 1 (click)" oncommand="alert(document.popupNode);alert(document.popupNode.value);"/>
      <menuitem label="Page 2"/>
